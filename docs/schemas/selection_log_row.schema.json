{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "SelectionLogRow",
  "type": "object",
  "required": [
    "ts_unix",
    "track_id",
    "tier",
    "action",
    "reason_tag",
    "evidence",
    "paper_key"
  ],
  "properties": {
    "ts_unix": { "type": "integer" },
    "track_id": { "type": "string" },
    "tier": { "type": "string", "enum": ["core", "extended"] },
    "paper_id": { "type": "string" },
    "paper_key": { "type": "string", "minLength": 1 },
    "openalex_id": { "type": "string" },
    "doi": { "type": ["string", "null"] },
    "arxiv_id": { "type": ["string", "null"] },
    "action": { "type": "string", "enum": ["include", "exclude"] },
    "reason_tag": { "type": "string", "minLength": 1 },
    "reviewer_id": { "type": "string" },
    "evidence": { "type": "object" }
  },
  "additionalProperties": true
}
