{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "PaperIdMapRow",
  "type": "object",
  "required": [
    "tier",
    "paper_id",
    "paper_key",
    "track_id",
    "openalex_id",
    "title"
  ],
  "properties": {
    "tier": { "type": "string", "enum": ["core", "extended"] },
    "paper_id": { "type": "string", "minLength": 1 },
    "paper_key": { "type": "string", "minLength": 1 },
    "track_id": { "type": "string", "minLength": 1 },
    "openalex_id": { "type": "string", "minLength": 1 },
    "title": { "type": "string" },
    "year": { "type": ["integer", "null"] },
    "cited_by_count": { "type": "integer" },
    "dependencies": { "type": "array", "items": { "type": "string" } },
    "concept_ids": { "type": "array", "items": { "type": "string" } },
    "selection_signals": { "type": ["object", "null"] },
    "confidence_score": { "type": ["number", "integer"] },
    "fulltext_status": { "type": "string" },
    "formula_graph_status": { "type": "string" }
  },
  "additionalProperties": true
}
